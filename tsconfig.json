{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "target": "ES2020",
    "sourceMap": true,
    "strict": true, // Enable all strict type-checking options
    "strictNullChecks": true, // Ensure that `null` and `undefined` are handled correctly
    "strictFunctionTypes": true, // Enforce function types to be checked strictly
    "strictBindCallApply": true, // Ensure method calls (`bind`, `call`, `apply`) are checked
    "noImplicitThis": true, // Disallow `this` context to be inferred as `any`
    "alwaysStrict": true, // Emit "use strict" in generated code
    "strictPropertyInitialization": true, // Ensure class properties are initialized in the constructor

    "noImplicitReturns": true, // Ensure all code paths in a function return a value
    "noFallthroughCasesInSwitch": true, // Prevent fall-through behavior in switch statements

    // Additional recommended settings for safer code
    "noImplicitOverride": true, // Ensure method overrides are explicitly marked
    "noUncheckedIndexedAccess": true, // Enforces strict array and object access, assuming undefined when accessing properties dynamically
    "exactOptionalPropertyTypes": true, // Ensure optional properties are treated strictly in object literals

    // Type-checking support
    "esModuleInterop": true, // Ensure compatibility with CommonJS and ES Modules
    "skipLibCheck": false, // Type-check declaration files
    "resolveJsonModule": true, // Enable importing `.json` files
    "declaration": true, // Generate .d.ts files for type definitions
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
